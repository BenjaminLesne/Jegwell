<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>
			Jegwell |
			{% block title %}{% endblock %}
		</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('build/favicon.ico') }}">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		<link rel="stylesheet" href="{{asset('build/desktop.css')}}" media="(min-width: 500px)">

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body id="topOfThePage">
		<header class="primary-header-wrapper {{ app.request.get('_route') == 'app_home' ? 'primary-header-wrapper--home' }}">
			<nav class="primary-header" aria-labelledby="primary-navigation">
				<div class="main-menu" id="main-menu">
					<button class="close-button" id="main-menu-close-button" value="default">
						<svg class="close-button__cross-icon">
							<use href="{{asset('build/svgs-sprite.svg')}}#cross"/>
						</svg>
					</button>
					<ul class="main-menu__list">
						<li class="main-menu__item {{ (app.request.get('_route') is same as('app_home')) ? 'main-menu__item--active' }}" data-request-uri='/'>
							<a class='main-menu__link' href='{{ path('app_home') }}'>accueil</a>
						</li>
						<li class="main-menu__item {{ (app.request.get('_route') is same as('app_products')) ? 'main-menu__item--active' }}" data-request-uri='/creations'>
							<a class='main-menu__link' href='{{ path('app_products') }}'>Nos créations</a>
						</li>
						<li class="main-menu__item" data-request-uri='/#categories'>
							<a class='main-menu__link' href='{{ path('app_home') }}#categories'>catégories</a>
						</li>
						<li class="main-menu__item" data-request-uri='/panier'>
							<a class='main-menu__link' href="{{ path('app_basket') }}">Panier</a>
						</li>
					</ul>
				</div>
				<button class="burger-button" id="burger-button">
					<span class="burger-button__slice"></span>
					<span class="burger-button__slice"></span>
					<span class="burger-button__slice"></span>
				</button>
				<a class="brand-wrapper" href="{{ path('app_home') }}">
					<div class="brand">
						<div class="logo">
							<div class="logo__image">
								<svg class="logo__svg">
									<use href="{{ asset('build/svgs-sprite.svg') }}#rings"/>
								</svg>
							</div>
						</div>
						<div class="brand__text">
							<span class="brand__name">JEGWELL</span>
							<span class="brand__name brand__name--slogan">BIJOUX FAITS-MAIN</span>
						</div>
					</div>
				</a>
				<a class="basket-icon-wrapper" href='{{ path('app_basket') }}'>
					<svg class="basket-icon">
						<use href="{{ asset('build/svgs-sprite.svg') }}#basket"/>
					</svg>
				</a>
			</nav>
		</header>

		{% block body %}{% endblock %}

		<a class="backToTopWrapper clickable" href="javascript:window.scrollTo(0, 0);">
			<svg class="backToTop">
				<use href="{{ asset('build/svgs-sprite.svg') }}#arrow-up"/>
			</svg>
		</a>

		<footer class="footer">
			<div class="footer__content-wrapper">
				<h2 class="footer__heading">RÉSEAUX SOCIAUX</h2>
				<ul class="footer__list">
					<li class="footer__items">
						<a class="footer__links" href="https://www.instagram.com/jegwell/">Instagram</a>
					</li>
					<li class="footer__items">
						<a class="footer__links" href="https://www.tiktok.com/@jegwell">TikTok</a>
					</li>
					<li class="footer__items">
						<a class="footer__links" href="https://www.facebook.com/jegwell">Facebook</a>
					</li>
				</ul>

				<!-- <h2 class="footer__heading">À PROPOS</h2>
																												        <ul class="footer__list">
																												            <li class="footer__items"><a class="footer__links" href="#">CGV</a></li>
																												        <li class="footer__items"><a class="footer__links" href="#">Mentions Légales</a></li>
																												            <li class="footer__items"><a class="footer__links" href="#">Livraison</a></li>
																												            <li class="footer__items"><a class="footer__links" href="#">Contact</a></li>
																												
																												        </ul> -->
			</div>
		</footer>
	</body>
</html>
