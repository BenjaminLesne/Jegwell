{
  "scripts": {
    "start-mysql": "sudo /usr/local/mysql/bin/mysqld_safe --user=mysql",
    "serve": "php -S localhost:8080 -t wordpress &> /dev/null & xdg-open http://localhost:8080",
    "stop-mysql": "sudo /usr/local/mysql/bin/mysqladmin -u root -p shutdown",
    "tests": "./vendor/bin/phpunit --verbose --debug"
  },
  "name": "benjamin/jegwell",
  "description": "La boutique officielle de Jegwell",
  "type": "project",
  "require": {
    "composer/installers": "^2.2",
    "johnpbloch/wordpress-core-installer": "^2.0",
    "johnpbloch/wordpress-core": "^6.0",
    "drupal-composer/preserve-paths": "^0.1.6",
    "wpackagist-plugin/woocommerce": "^6.8",
    "vlucas/phpdotenv": "^5.4",
    "wpackagist-plugin/manage-notification-emails": "^1.8",
    "sentry/sdk": "^3.2",
    "phpmailer/phpmailer": "^6.6"
  },
  "license": "GPL",
  "authors": [
    {
      "name": "Benjamin LESNE",
      "email": "benjamin.lesne@outlook.fr"
    }
  ],
  "minimum-stability": "stable",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://packagist.org"
    }
  ],
  "extra": {
    "installer-paths": {
      "wordpress/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "wordpress/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "wordpress",
    "preserve-paths": [
      "wordpress/robots.txt",
      "wordpress/wp-config.php",
      "wordpress/wp-content/themes/jegwell-front",
      "wordpress/wp-content/plugins/perfmatters"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "drupal-composer/preserve-paths": true,
      "johnpbloch/wordpress-core-installer": true
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
}
